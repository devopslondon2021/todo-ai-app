# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# OpenAI
OPENAI_API_KEY=sk-...

# Ollama (optional local model)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# AI Provider: "openai" or "ollama"
AI_PROVIDER=openai

# Backend
PORT=3001
CORS_ORIGIN=http://localhost:3000
BACKEND_URL=http://localhost:3001

# Frontend
NEXT_PUBLIC_BACKEND_URL=http://localhost:3001
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Google Calendar (optional — enables meeting sync)
# Credentials can also be set from the Settings UI (stored in DB per user).
# .env values serve as a fallback if no per-user credentials are saved.
# GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=your-client-secret
# GOOGLE_OAUTH_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Twilio (optional — enables call escalation for reminders)
# TWILIO_ACCOUNT_SID=ACxxxxxxxxxx
# TWILIO_AUTH_TOKEN=your-auth-token
# TWILIO_PHONE_NUMBER=+1234567890
# CALL_ESCALATION_DELAY_MIN=5
